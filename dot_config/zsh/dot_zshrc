# clean up duplicates in $PATH
typeset -U PATH

### ENVIRONMENT VARIABLES
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_CACHE_HOME="$HOME/.cache"
export EDITOR="nvim"

### ZSH
HISTFILE="$ZDOTDIR/.zsh_history"
HISTSIZE=100000
SAVEHIST=100000
setopt hist_ignore_all_dups inc_append_history
bindkey -e

### PROMPT
autoload -Uz vcs_info
precmd() { vcs_info }
setopt prompt_subst
zstyle ":vcs_info:*" formats "%F{blue}(%f%b%F{blue})%f "
PROMPT='%F{blue}%1~%f ${vcs_info_msg_0_}'

### BINARIES
source "$ZDOTDIR/plugins/ez-compinit/ez-compinit.plugin.zsh"
# homebrew
case "$OSTYPE" in
    darwin*)
    brew_prefix="/opt/homebrew"
    ;;
    linux*)
    brew_prefix="/home/linuxbrew/.linuxbrew"
    ;;
esac
eval "$(${brew_prefix}/bin/brew shellenv)"
# platform specific binaries
case "$OSTYPE" in
    darwin*)
    # spicetify
    SPICETIFY_INSTALL="$HOME/.spicetify"
    export PATH="$HOME/.spicetify:$PATH"
    # gcloud
    source "$HOME/google-cloud-sdk/path.zsh.inc"
    source "$HOME/google-cloud-sdk/completion.zsh.inc"
    ;;
    linux*)
    # gcloud
    source "/usr/share/google-cloud-sdk/completion.zsh.inc"
    ;;
esac
# fzf
source "$HOME/.config/fzf/config"
eval "$(fzf --zsh)"
# uv
export PATH="$(uv python dir --bin):$PATH"
# cargo
source "$HOME/.cargo/env"
FPATH="$(rustc --print sysroot)/share/zsh/site-functions:${FPATH}"
# go
export PATH="$(go env GOPATH)/bin:$PATH"
# dune
export DUNE_DIFF_COMMAND="difft --exit-code --color=always"
# openjdk
export PATH="${brew_prefix}/opt/openjdk/bin:$PATH"
# koushin
FPATH="$HOME/repos/koushin/completions:${FPATH}"

### PLUGINS
# fzf-tab
source "$HOME/.config/zsh/plugins/fzf-tab/fzf-tab.plugin.zsh"
zstyle ':fzf-tab:*' use-fzf-default-opts yes
zstyle ":fzf-tab:*" fzf-flags --height=60%
zstyle ":fzf-tab:complete:cd:*" fzf-preview '\
eza -alh -TL 2 --color=always \
--git --ignore-glob=".git" --no-permissions --no-time $realpath'
# zsh-autosuggestions
source "$HOME/.config/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh"
bindkey "^ " forward-word

### ALIASES
alias hist="vim $HOME/.config/zsh/.zsh_history"
alias ls="eza"
alias ll="eza -alh"
alias buu="brew update --verbose && brew upgrade"
alias vim="nvim"

### TMUX
# attach to tmux automatically
if [ -z "$TMUX" ]; then
    if tmux has-session -t dev 2>/dev/null; then
        tmux attach-session -t dev
    else
        tmux new-session -A -s dev
    fi
fi
# run macchina
if [[ ! -z "$TMUX"
    && "$OSTYPE" =~ darwin*
    && $(tmux display-message -p "#I") == "1"
    && $(tmux display-message -p "#{pane_index}") == "0"
]]; then
    macchina
fi
